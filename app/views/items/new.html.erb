<h1>Lend out an item</h1>
<%= simple_form_for [@user, @item] do |f| %>
  <%= f.input :title %>
  <%= f.input :category, collection: %i[Stereo Tools Camera Art Surfboards Scubagear Grill Bike Utilities Camping Instruments Wilderness Other]%>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :deposit %>
  <%= f.submit %>
<% end %>