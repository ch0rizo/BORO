<div class="container">
  <div class="container-category">
    <h2>Categories</h2>
  </div>
  <div class="container-index">
    <div class="container-cards">
      <div class="search-filter sticky-top">
      </div>
      <div class="m-3">
        <div class="cards">
          <% @items.each do |item| %>
            <% if item.photos_attachments[0] != nil %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photos_attachments[0].key, height: 300, crop: :fill %>')">
                <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
                <h6> <%= item.description %></h6>
                <p> $<%= item.price %> / day</p>
                <% if current_user == item.user %>
                  <p>Owner</p>
                <% end %>
              </div>
            <% else %>
              <div class="card-category" style="background-color: orange">
                <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
                <h6> <%= item.description %></h6>
                <p> $<%= item.price %> / day</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="map-box"></div>
  </div>
  

</div>

