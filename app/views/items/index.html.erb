<div class="container">
  <div class="container-category">
    <h2>Categories</h2>
  </div>
  <div class="container-index">
    <div class="container-cards">
      <div class="search-filter sticky-top">
      </div>
      <div class="m-3">
        <div class="cards">
          <% @items.each do |item| %>
            <% if item.photos_attachments[0] != nil %>
              <%= link_to item_path(item) do %>
                <div class="card">
                  <div class="card-image">
                    <%= cl_image_tag item.photos_attachments[0].key, crop: :fill %>
                  </div>
                  <div class="card-info d-flex justify-content-between align-content-center">
                    <div class="card-name-price">
                      <h4> <%= item.title %> </h4>
                      <p> <%= User.find(item.user_id).first_name %> </p>
                      <div class="card-name-price-price">
                        <p> <strong>$<%= item.price %></strong> / day</p>
                      </div>
                    </div>
                    <div class="card-owner">
                      <% if current_user == item.user %>
                        <p>Owner</p>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="card-category" style="background-color: orange">
                <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
                <h6> <%= item.description %></h6>
                <p> $<%= item.price %> / day</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="map-box"></div>
  </div>
  

</div>

