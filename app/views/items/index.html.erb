<%= form_with url: items_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an item"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="m-3">
  <h1 style="text-align: center;" class="my-4">Lend Me!</h1>
  <div class="cards">
    <% @items.each do |item| %>
        <% if current_user != item.user_id %>
        <% if item.photos_attachments[0] != nil %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photos_attachments[0].key, height: 300, crop: :fill %>')">
            <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
            <h6> <%= item.description %></h6>
            <p> $<%= item.price %> / day</p>
            <% if current_user == item.user %>
              <p>Owner</p>
            <% end %>
          </div>
        <% else %>
          <div class="card-category" style="background-color: orange">
            <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
            <h6> <%= item.description %></h6>
            <p> $<%= item.price %> / day</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="container-index">
    <div class="container-cards">
      <div class="search-filter sticky-top">
      </div>
      <div class="m-3">
        <div class="cards">
          <% @items.each do |item| %>
            <% if item.photos_attachments[0] != nil %>
              <%= link_to item_path(item) do %>
                <div class="card">
                  <div class="card-image">
                    <%= cl_image_tag item.photos_attachments[0].key, crop: :fill %>
                  </div>
                  <div class="card-info d-flex justify-content-between align-content-center">
                    <div class="card-name-price">
                      <h4> <%= item.title %> </h4>
                      <p> <%= User.find(item.user_id).first_name %> </p>
                      <div class="card-name-price-price">
                        <p> <strong>$<%= item.price %></strong> / day</p>
                      </div>
                    </div>
                    <div class="card-owner">
                      <% if current_user == item.user %>
                        <p>Owner</p>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="card-category" style="background-color: orange">
                <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
                <h6> <%= item.description %></h6>
                <p> $<%= item.price %> / day</p>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>

  <div class="map-box"></div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
