<div class="container my-4">
  <%= cl_image_tag @item.photos_attachments[1].key, width: 400, height: 300, crop: :fill %>
  <h2><%= @item.title %></h2>
  <p><%= @item.description %></p>
  <p>$<%= @item.price %></p>

  <% if current_user == @item.user %>
    <%= link_to "Edit Item", edit_item_path, class: "btn btn-ghost" %>
  <% end %>

  <% if current_user == @item.user %>
    <%= link_to "Delete Item", item_path(@item),  data: {turbo_method: :delete}, class: "btn btn-ghost" %>
  <% end %>

  <% if current_user != @item.user %>
    <h4>Lend this item</h4>
    <%= simple_form_for([@item, @lending]) do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit "Borrow Item", class: "btn btn-primary btn-lg btn-block btn-booking" %>
    <% end %>
  <% end %>
</div>
