<%= form_with url: items_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an item"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="m-3">
  <h1 style="text-align: center;" class="my-4">Lend Me!</h1>
  <div class="cards">
    <% @items.each do |item| %>
        <% if current_user != item.user_id %>
        <% if item.photos_attachments[0] != nil %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photos_attachments[0].key, height: 300, crop: :fill %>')">
            <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
            <h6> <%= item.description %></h6>
            <p> $<%= item.price %> / day</p>
            <% if current_user == item.user %>
              <p>Owner</p>
            <% end %>
          </div>
        <% else %>
          <div class="card-category" style="background-color: orange">
            <h3> <%= link_to "#{item.title}", item_path(item) %> </h3>
            <h6> <%= item.description %></h6>
            <p> $<%= item.price %> / day</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
